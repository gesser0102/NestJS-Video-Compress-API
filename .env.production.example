# Production Environment Variables

# Google Cloud Platform
GCP_PROJECT_ID=your_production_project_id
GCS_BUCKET=your_production_bucket_name
PUBSUB_TOPIC=video-uploads-prod
PUBSUB_SUBSCRIPTION=video-processor-sub-prod
SIGN_URL_EXPIRATION_SECONDS=900

# Firebase
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# Application
NODE_ENV=production
PORT=3000

# WebSocket e Internal API
WEBSOCKET_CORS_ORIGIN=https://your-domain.com
INTERNAL_API_SECRET=your_very_strong_secret_here
WEBSOCKET_HEARTBEAT_INTERVAL=25000
WEBSOCKET_HEARTBEAT_TIMEOUT=60000

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MS=5000

# Video Processing
MAX_FILE_SIZE_MB=500
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime,video/x-msvideo

# URLs for production
API_BASE_URL=https://api.your-domain.com
SOCKET_URL=https://api.your-domain.com

# Monitoring (opcional)
GRAFANA_PASSWORD=your_grafana_password